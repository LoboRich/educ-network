= form_for @assignment_submission do |f|
  - if @assignment_submission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment_submission.errors.count, "error")} prohibited this assignment_submission from being saved:"
      %ul
        - @assignment_submission.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :assignment
    = f.text_field :assignment
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :file
    = f.file_field :file
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :grade
    = f.text_field :grade
  .actions
    = f.submit 'Save'
