= form_with(model: [@group, @assignment], local: true) do |f|
  - if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |msg|
          %li= msg
  .w-full.bg-white.rounded-lg.mx-auto.mt-16.flex.overflow-hidden.rounded-b-none.flex-col.p-8
    .w-full
      .md:flex.items-center
        .w-full.flex.flex-col.px-2.py-4
          = f.label :title, :class => "text-sm text-gray-600"
          = f.text_field :title, :class => "mt-2 border-2 border-gray-200 px-3 py-2 block w-full rounded-lg text-base text-gray-900 focus:outline-none focus:border-indigo-500"
            
      .md:flex.items-center
        .w-full.flex.flex-col.px-2.py-4
          = f.label :instructions, :class => "text-sm text-gray-600"
          = f.text_field :instructions, :class => "mt-2 border-2 border-gray-200 px-3 py-2 block w-full rounded-lg text-base text-gray-900 focus:outline-none focus:border-indigo-500", :placeholder => "Class description", rows: "3"
          
    .md:flex-1.px-3.text-center.md:text-right.mt-16
      %button.bg-my-silver.hover:bg-blue-700.text-white.font-bold.py-2.px-4.rounded Cancel
      %input.bg-my-blue.hover:bg-my-light-blue.text-white.font-bold.py-2.px-4.rounded{type: "submit", value: "Create"}/