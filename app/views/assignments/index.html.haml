%h1 Listing assignments

%table
  %thead
    %tr
      %th Title
      %th Instructions
      %th Group
      %th
      %th
      %th

  %tbody
    - @assignments.each do |assignment|
      %tr
        %td= assignment.group
        %td= assignment.title
        %td= assignment.instructions
        %td= link_to 'Show Group', [@group]
        %td= link_to 'Edit Assignment', edit_group_assignment_path(@group, assignment)
