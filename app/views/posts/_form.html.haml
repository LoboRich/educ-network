= form_for ([@group , @post]) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.hidden_field :user_id, value: current_user.id
  .actions
    = f.submit 'Save'

  %textarea.bg-gray-200.w-full.rounded-lg.shadow.border.p-2{:placeholder => "Speak your mind", :rows => "3"}
  .w-full.flex.flex-row.flex-wrap.mt-3
    %div{:class => "w-2/3"}
      %button.float-right.bg-indigo-400.hover:bg-indigo-300.text-white.p-2.rounded-lg{:type => "button"} Submit
