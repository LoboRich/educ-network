!!!
%html.h-full.bg-gray-50
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title TailwindDemo
    = csrf_meta_tags
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    %link{href: "https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css", rel: "stylesheet"}/
    %link{href: "https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css", rel: "stylesheet"}/
    %script{src: "https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"}
    %script{src: "https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"}
  %body.w-screen.h-screen
    %div
      %script{defer: "defer", src: "https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"}
      
      - if user_signed_in?
        .flex.h-screen.bg-gray-200{"x-data" => "{ sidebarOpen: false }"}
          = render :partial => "layouts/sidebar"
          .flex-1.flex.flex-col.overflow-hidden
            = render :partial => "layouts/header"
            %main.flex-1.overflow-x-hidden.overflow-y-auto.bg-gray-200
              = yield
      - else
        = yield
      - if flash.any?
        %script(type="text/javascript")
          - flash.each do |key, value|
            - type = key.to_s.gsub('alert', 'error').gsub('notice', 'success');
            toastr.#{type}('#{value}')