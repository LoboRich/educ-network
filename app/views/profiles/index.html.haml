.container.mx-auto.w-full.mt-8.py-10.min-w-full.sm:px-6.lg:px-8.bg-white.rounded
  %h1.text-2xl.font-bold.text-my-blue.px-6.md:px-0 Sample form
  %hr.border-my-pink.mt-4/
  %form{action: "{{ route('profile.save') }}", enctype: "multipart/form-data", method: "POST"}
    .w-full.bg-white.rounded-lg.mx-auto.mt-8.flex.overflow-hidden.rounded-b-none
      .w-full
        .md:flex.items-center
          .w-full.flex.flex-col.px-2{class: "md:w-1/2"}
            %label.text-sm.text-gray-600{for: "name"} Name
            %input.mt-2.border-2.border-gray-200.px-3.py-2.block.w-full.rounded-lg.text-base.text-gray-900.focus:outline-none.focus:border-indigo-500{name: "name", type: "text", value: ""}/
          .w-full.flex.flex-col.px-2{class: "md:w-1/2"}
            %label.text-sm.text-gray-600{for: "email"} Email Address
            %input.mt-2.border-2.border-gray-200.px-3.py-2.block.w-full.rounded-lg.text-base.text-gray-900.focus:outline-none.focus:border-indigo-500{name: "email", type: "email", value: ""}/
        .md:flex.items-center
          .w-full.flex.flex-col.px-2.py-4
            %label.text-sm.text-gray-600{for: "message"} Message
            %textarea#exampleFormControlTextarea1.mt-2.border-2.border-gray-200.px-3.py-2.block.w-full.rounded-lg.text-base.text-gray-900.focus:outline-none.focus:border-indigo-500{placeholder: "Your message", rows: "3"}
        
          -# <div class="md:flex items-center">
          -# <div class="w-full flex flex-col px-2 py-4">
          -# <label for="photo" class="text-sm text-gray-600 w-full block">Photo</label>
          -# <img class="rounded-full w-16 h-16 border-4 mt-2 border-gray-200 float-left" id="photo" src="https://pbs.twimg.com/profile_images/1163965029063913472/ItoFLWys_400x400.jpg" alt="photo">
          -# </div>
          -# </div>
        .md:flex.items-center
          .w-full.flex.flex-col.px-2.py-4
            %label.inline-block.mb-2.text-gray-500 Upload Image(jpg,png,svg,jpeg)
            .flex.items-center.justify-center.w-full
              %label.flex.flex-col.w-full.h-32.border-4.border-dashed.hover:bg-gray-100.hover:border-gray-300
                .flex.flex-col.items-center.justify-center.pt-7
                  %svg.w-12.h-12.text-gray-400.group-hover:text-gray-600{fill: "currentColor", viewbox: "0 0 20 20", xmlns: "http://www.w3.org/2000/svg"}
                    %path{"clip-rule" => "evenodd", d: "M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z", "fill-rule" => "evenodd"}
                  %p.pt-1.text-sm.tracking-wider.text-gray-400.group-hover:text-gray-600 Select a photo
                %input.opacity-0{type: "file"}/
        
    %hr.border-my-pink.mt-8
    .md:flex-1.px-3.text-center.md:text-right.mt-8
      %button.bg-my-silver.hover:bg-blue-700.text-white.font-bold.py-2.px-4.rounded Cancel
      %input.bg-my-blue.hover:bg-my-light-blue.text-white.font-bold.py-2.px-4.rounded{type: "submit", value: "Create"}/
